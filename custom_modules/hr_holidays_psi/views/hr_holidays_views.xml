		<record id="edit_holiday_new_psi_inherit" model="ir.ui.view">
			<field name="name">edit.holiday.new.psi.inherit</field>
			<field name="model">hr.holidays</field>
			<field name="inherit_id" ref="hr_holidays.edit_holiday_new" />
			<field name="arch" type="xml">

				<xpath expr="//field[@name='name']/.." position="replace">
					<group>
						<field name="name"
							attrs="{'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
						<field name="holiday_status_id" context="{'employee_id':employee_id}"
							attrs="{'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
					</group>
					<group>
						<div attrs="{'invisible': [('type', '=', 'add')]}">
							<field name="date_from"
								attrs="{'required':[('type', '=', 'remove')],'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}"
								class="oe_inline" />
							<label string="-" class="oe_inline" />
							<field name="date_to"
								attrs="{'required':[('type', '=', 'remove')],'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}"
								class="oe_inline" />
						</div>
						<div>
							<div>
								<label for="number_of_days_temp" string="Durée" />
								<field name="number_of_days_temp" readonly="1"
									attrs="{'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
								jour(s)
							</div>
							<label for="demi_jour" string="Demi-journée" />
							<field name="demi_jour" class="oe_inline"
								attrs="{'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
							<field name="matin_soir" attrs="{'invisible':[('demi_jour', '=', False)]}"
								class="oe_inline" />
							<label for="deduit" string="Déductible" />
							<field name="deduit" class="oe_inline" readonly='1' />
						</div>
					</group>
				</xpath>
				<xpath expr="//div[@class='oe_title']">
					<div name="button_box" position="inside">
						<button name="action_get_attachment_tree_view" class="oe_stat_button"
							icon="fa-book" type="object">
							<field name="attachment_number" widget="statinfo" string="Documents"
								modifiers="{'readonly': true}"
								attrs="{'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
						</button>
					</div>
				</xpath>

				<field name="category_id" position="replace">
					<field name="category_id" invisible="1" />
					<field name="last_business_day" invisible="1" />
					<field name="id_psi_holidays_status" invisible="1" />
					<field name="is_user_rh" invisible="1" />
					<field name="is_user_employee_concerned" invisible="1" />
				</field>

				<xpath expr="//field[@name='holiday_status_id']" position='after'>
					<field name="holiday_type_permission"
						attrs="{'invisible':[('id_psi_holidays_status','!=',1)], 'required': [('id_psi_holidays_status', '=', 1)],'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
				</xpath>

				<field name="holiday_type" position="after">
					<field name="psi_category_id"
						attrs="{'invisible': [('holiday_type','not in','category')],'readonly':['|', ('state','in',['confirm','validate1','validate2','validate']),'&amp;',('state','=','approbation'),('is_user_rh','=',False)]}" />
				</field>

				<xpath expr="//button[@name='action_confirm']" position="replace">
					<button string="Soumettre" name="action_confirm" states="draft"
						type="object" class="oe_highlight" />
				</xpath>
				<xpath expr="//button[@name='action_validate']" position='replace'>
					<!-- Valider (DRHA) -->
					<button string="Valider cette demande" name="action_validate"
						states="validate2" type="object" class="oe_highlight"
						groups="hr_holidays_psi.group_hr_holidays_drha" />
				</xpath>
				<xpath expr="//button[@name='action_approve']" position='after'>
					<!-- Approuver (Chef de departement) -->
					<button string="Valider cette demande" name="action_approbation_departement"
						attrs="{'invisible': [('state','not in','validate1')]}" type="object"
						class="oe_highlight" groups="hr_holidays_psi.group_hr_holidays_chef_departement" />
				</xpath>
				<xpath expr="//button[@name='action_approve']" position='replace'>
					<!-- Valider (Supérieur hiérarchique) -->
					<button string="Valider cette demande" name="action_approve"
						states="confirm" type="object" class="oe_highlight"
						groups="hr_holidays_psi.group_hr_holidays_sup_hierarchique" />
				</xpath>
				<xpath expr="//button[@name='action_refuse']" position='replace'>
					<!-- REFUSER PAR RH -->
					<button string="Refuser" name="action_refuse" states="approbation"
						type="object" attrs="{'invisible':[('state','not in','approbation')]}"
						groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa,hr_holidays_psi.group_hr_holidays_crh" />
					<!-- REFUSER PAR DRHA -->
					<button string="Refuser" name="action_refuse" states="confirm,validate1,validate2"
						type="object" attrs="{'invisible':[('state','not in','validate2')]}"
						groups="hr_holidays_psi.group_hr_holidays_spa,hr_holidays_psi.group_hr_holidays_crh,hr_holidays_psi.group_hr_holidays_drha" />
				</xpath>
				<field name="state" position="after">
					<!-- Valider (Responsable RH) -->
					<button string="Valider cette demande" name="action_approve_candidate1"
						attrs="{'invisible': [('state','not in','approbation')]}" type="object"
						class="oe_highlight"
						groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa" />
				</field>

				<field name="state" position="replace">
					<field name="state" widget="statusbar"
						statusbar_visible="confirm, validate1, approbation,validate2, validate" />
				</field>

				<field name="holiday_type" position="replace">
					<field name="holiday_type"
						attrs="{'readonly':[('type', '=', 'remove'),('state','!=','draft')]}"
						string="Mode" groups="hr_holidays.group_hr_holidays_manager"
						context="{'employee_id':employee_id}" />
				</field>

				<!-- <xpath expr="//field[@name='holiday_type']" position="replace"> 
					<field name="holiday_type" attrs="{'readonly':[('type', '=', 'remove'),('state','!=','draft')]}" 
					string="Mode" groups="hr_holidays.group_hr_holidays_manager" context="{'employee_id':employee_id}" 
					/> </xpath> -->
				<field name="employee_id" position="replace">
