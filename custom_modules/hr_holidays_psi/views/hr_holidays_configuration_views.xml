<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
	<record id="hr_holiday_configuration_form" model="ir.ui.view">
		<field name="name">hr.holiday.configuration.form</field>
		<field name="model">hr.holidays.configuration</field>
		<field name="arch" type="xml">
			<form create="false" string="Configuration">
				<group>
					<field name="droit_conge" />
					<field name="droit_conge_nb_jr" />
					<field name="conges_sans_solde" />
				</group>
			</form>
		</field>
	</record>
	
	<record id="open_configuration" model="ir.actions.act_window">
		<field name="name">Données par défaut</field>
		<field name="res_model">hr.holidays.configuration</field>
		<field name="res_id" eval="ref('default_config')" />
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="view_id" eval="False" />
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Configuration
			</p>
		</field>
	</record>
	
	<record id="hr_holidays_type_permission_tree" model="ir.ui.view">
		<field name="name">hr.holidays.type.permission.tree</field>
		<field name="model">hr.holidays.type.permission</field>
		<field name="arch" type="xml">
			<tree string="Type de permission" editable="bottom" create="false" delete="false">
				<field name="name" />
				<field name="number_of_day" />
				<field name="cosomme" />
			</tree>
		</field>
	</record>
	
	<record id="open_holidays_type_permission" model="ir.actions.act_window">
		<field name="name">Type de permission</field>
		<field name="res_model">hr.holidays.type.permission</field>
		<field name="res_id" eval="ref('default_config')" />
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="view_id" ref="hr_holidays_type_permission_tree"/>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Permission
			</p>
		</field>
	</record>
	
	<menuitem id="hr_menu_holidays_psi_config" parent="hr_holidays.menu_hr_holidays_root"
		sequence="5" name="PSI Configuration" groups="hr_holidays_psi.group_hr_holidays_rh,hr_holidays_psi.group_hr_holidays_spa"/>
		
	<menuitem id="menu_holidays_config" action="open_configuration"
		parent="hr_menu_holidays_psi_config" sequence="6" />
		
	<menuitem id="menu_holidays_type_permission" action="open_holidays_type_permission"
		parent="hr_menu_holidays_psi_config" sequence="7" />
</odoo>
