<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Cron rappel justificatif - congé maladie -->
        <record id="ir_cron_send_email_rappel_justificatif_conge_maladie" model="ir.cron">
            <field name="name">PSI Congé maladie - Rappel piece justificatif</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True" />
            <field eval="'hr.holidays'" name="model" />
            <field name="nextcall" eval="(datetime.utcnow() + timedelta(days=0)).strftime('%Y-%m-%d 01:20:00')" />
            <field name="function" eval="'_send_email_rappel_justificatif_conge_maladie'" /> 
        </record>

        <!-- Cron Droits aux congés – nombre de jour(s) -->
        <record id="ir_cron_psi_droit_aux_conges_nombre_jour" model="ir.cron">
            <field name="name">PSI Droits aux congés – nombre de jour(s)</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True" />
            <field eval="'hr.holidays'" name="model" />
            <field name="function" eval="'_increment_doit_conge'" /> 
    </record>
        
        <!-- Cron rappel rappel aux Assistantes et Coordinateurs -->
        <record id="ir_cron_send_email_absence_rappel_assistances_coordinateur" model="ir.cron">
            <field name="name">PSI Congé - Rappel aux Assistantes et Coordinateurs</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True" />
            <field eval="'hr.holidays'" name="model" />
            <field name="nextcall" eval="(datetime.utcnow() + timedelta(days=0)).strftime('%Y-%m-%d 06:30:00')" />
            <field name="function" eval="'_send_email_rappel_absences_to_assist_and_coord'" />
        </record>
    </data>
</odoo>