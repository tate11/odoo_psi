<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Template mail pour envoi de pièce justificatif - COngé maladie -->
		<record id="custom_template_rappel_justificatif_conge_maladie" model="mail.template">
			<field name="model_id" ref="hr_holidays_psi.model_hr_holidays" />
			<field name="name">PSI Template email employee - Rappel justificatif - Congé maladie</field>
			<field name="email_from"><![CDATA[${object.create_uid.email or object.company_id.email}]]></field>
			<field name="email_to">${object.employee_id.work_email or object.employee_id.user_id.email}</field>
			<field name="subject">Rappel pour envoi des pièces justificatives- Congé maladie</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour,     	                  
	</p>
	<p>
		Si ce n'est déjà fait, veuillez joindre à votre demande de congé une ordonnance ou une pièce justificative.
	</p>
	<p></p>
	<p>Cordialement</p>
</div>   ]]>
			</field>
		</record>
		
		<!-- Template mail Absences - Rappel aux Assistantes et Coordinateurs  -->
		<record id="custom_template_absences_to_assist_and_coord" model="mail.template">
			<field name="name">PSI Template email absences - Rappel aux Assistantes et Coordinateurs</field>
			<field name="model_id" ref="hr_holidays_psi.model_hr_holidays" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Rappel pour envoi des pièces de demandes d'absences</field>
			<field name="email_to">${(object.manager_id.work_email and object.manager_id2.work_email)|safe}</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour, 
		Veuillez envoyé les pièces de demandes d'absences avec les états récapitulatif avant le fin du mois le ${object.last_business_day}.
	</p>
</div>   ]]>
			</field>
		</record>
    </data>
</odoo>