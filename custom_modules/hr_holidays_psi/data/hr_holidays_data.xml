<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record model="hr.holidays.status" id="type_permission">
			<field name="name">Absences pour permission</field>
			<field name="holidays_status_id_psi">1</field>
            <field name="is_not_limited_j3" eval="True"/>
            <field name="limit" eval="True"/>
        </record>
		<record model="hr.holidays.status" id="type_conge_annuel">
			<field name="name">Absences pour congé annuel</field>
			<field name="holidays_status_id_psi">2</field>
            <field name="is_not_limited_j3" eval="False"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_solde">
			<field name="name">Congés sans soldes</field>
			<field name="holidays_status_id_psi">3</field>
            <field name="is_not_limited_j3" eval="False"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_maladie">
			<field name="name">Congés maladies</field>
			<field name="holidays_status_id_psi">4</field>
            <field name="is_not_limited_j3" eval="True"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_formation">
			<field name="name">Absences pour formation</field>
			<field name="holidays_status_id_psi">5</field>
            <field name="is_not_limited_j3" eval="False"/>
			<field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_maternite">
			<field name="name">Congés de maternité</field>
			<field name="holidays_status_id_psi">6</field>
            <field name="is_not_limited_j3" eval="True"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_conge_paye">
			<field name="name">Congés payés</field>
			<field name="holidays_status_id_psi">7</field>
            <field name="is_not_limited_j3" eval="False"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_conge_hospitalisation">
			<field name="name">Absences pour hospitalisation</field>
			<field name="holidays_status_id_psi">0</field>
            <field name="is_not_limited_j3" eval="True"/>
            <field name="limit" eval="True"/>
		</record>
		<record model="hr.holidays.status" id="type_conge_convalescence">
			<field name="name">Absences pour convalescence</field>
			<field name="holidays_status_id_psi">9</field>
            <field name="is_not_limited_j3" eval="True"/>
            <field name="limit" eval="True"/>
		</record>
		
		<delete id="hr_holidays_psi.holiday_status_cl" model="hr.holidays.status"/>
		<!-- Casual leave -->
        <record id="hr_holidays_psi.holiday_status_cl" model="hr.holidays.status">
            <field name="name" eval="'Congés légaux'+time.strftime('%Y')"/>
            <field name="limit" eval="True"/>
        </record>
        
		<delete id="hr_holidays_psi.holiday_status_comp" model="hr.holidays.status"/>
		<!-- Compensatory Days -->
        <record id="holiday_status_comp" model="hr.holidays.status">
            <field name="name">Arrêts maladie</field>
            <field name="limit" eval="True"/>
        </record>
        
		<delete id="hr_holidays_psi.holiday_status_comp" model="hr.holidays.status"/>
		<!--Unpaid Leave -->
        <record id="holiday_status_comp" model="hr.holidays.status">
            <field name="name">jours de compensation</field>
            <field name="limit" eval="True"/>
        </record>
        
		<delete id="hr_holidays_psi.holiday_status_unpaid" model="hr.holidays.status"/>
		<!--Unpaid Leave -->
        <record id="holiday_status_unpaid" model="hr.holidays.status">
            <field name="name">Impayé</field>
            <field name="limit" eval="True"/>
        </record>


		<!-- Données par défaut configurations -->
		<record model="hr.holidays.configuration" id="default_config">
			<field name="droit_conge">6</field>
			<field name="droit_conge_nb_jr">2</field>
			<field name="conges_sans_solde">30</field>
			<field name="maternite">98</field>
		</record>

		
		<!-- Liste type permission -->
		<record model="hr.holidays.type.permission" id="marriage_employee">
	        <field name="name">Mariage de l’employé</field>
	        <field name="number_of_day">3</field>
	    </record>
		<record model="hr.holidays.type.permission" id="marriage_child_employee">
	        <field name="name">Mariage d’un enfant de l’employé</field>
	        <field name="number_of_day">3</field>
	    </record>
		<record model="hr.holidays.type.permission" id="marriage_family_employee">
	        <field name="name">Mariage père, mère, soeur, frère de l’employé</field>
	        <field name="number_of_day">2</field>
	    </record>
		<record model="hr.holidays.type.permission" id="fatherhood">
	        <field name="name">Naissance d’un enfant de l’employé (Paternité)</field>
	        <field name="number_of_day">5</field>
	    </record>
		<record model="hr.holidays.type.permission" id="circumcision_employee_child">
	        <field name="name">Circoncision d’un enfant de l’employé</field>
	        <field name="number_of_day">2</field>
	    </record>
		<record model="hr.holidays.type.permission" id="death_spouse_child_employee">
	        <field name="name">Décès du conjoint, enfant de l’employé</field>
	        <field name="number_of_day">5</field>
	    </record>
		<record model="hr.holidays.type.permission" id="death_family_employee">
	        <field name="name">Décès des parents et beaux-parents, frère ou soeur direct de l’employé ou de son conjoint</field>
	        <field name="number_of_day">3</field>
	    </record>
		<record model="hr.holidays.type.permission" id="exhumation_family_employee">
	        <field name="name">Exhumation du conjoint, enfants, parents, beaux-parents, frère ou soeur de l’employé ou de leur conjoint</field>
	        <field name="number_of_day">2</field>
	    </record>
		<record model="hr.holidays.type.permission" id="hospitalization_family_employee">
	        <field name="name">Hospitalisation de conjoint ou d’enfant mineur de l’employé sous sa garde ou à sa charge (légitime)</field>
	        <field name="number_of_day">3</field>
	    </record>
		<record model="hr.holidays.type.permission" id="move">
	        <field name="name">Déménagement (à raison d’une fois tous le 02 ans)</field>
	        <field name="number_of_day">2</field>
	    </record>
		<record model="hr.holidays.type.permission" id="administrative_formalities">
	        <field name="name">Formalités administratives (réunions des parent d’élèves, demande de divers certificats ou actes officiels…)</field>
	        <field name="number_of_day">0.5</field>
	    </record>		
		
		<!-- rules -->
		<record id="hr_holidays.property_rule_holidays_employee" model="ir.rule">
	        <field name="name">Employee Holidays</field>
	        <field name="model_id" ref="model_hr_holidays"/>
	        <field name="domain_force">['|', ('employee_id.user_id','=',user.id),('employee_id.coach_id.user_id','=', user.id)]</field>
	        <field name="perm_create" eval="False"/>
	        <field name="perm_write" eval="False"/>
	        <field name="perm_unlink" eval="False"/>
	        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
	    </record>
		
	</data>
</odoo>