<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--inherit project.project view -->
    <record id="edit_project_psi" model="ir.ui.view">
        <field name="name">project.project.form.psi</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='settings']">
                <group string="Employés">
                    <field name="employee_ids"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- inherit employées_psi -->
    <record id="hr_hr_employee_view_form_psi_inherited" model="ir.ui.view">
        <field name="name">hr.hr.employee.view.form.psi.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_employee_psi.hr_hr_employee_view_form_psi"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='psi_budget_code_distribution']" position="replace">
                <field name="project_ids" widget="many2many_tags" options="{'no_create_edit': True}" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>