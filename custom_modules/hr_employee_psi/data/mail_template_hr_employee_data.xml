<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="custom_template_notif_chang_info_perso"
			model="mail.template">
			<field name="name">Changement d'information personnelle</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Changement d'information personnelle</field>
			<field name="email_to">${object.work_email}</field>
			<field name="email_cc">${object.coach_id.email}</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour ${object.name}, <br/>
     	Votre(s) information(s) personnelle(s) a(ont) été changée(s):                    
	</p>
	<p>
		% if object.address_home_id :
			Adresse : ${object.address_home_id}<br/>
	  	% endif
	  	% if object.personal_phone:
			Téléphone portable : ${object.personal_phone}<br/>
		% endif
		% if object.personal_fixed_phone:
			Téléphone fixe : ${object.personal_fixed_phone}<br/>
		% endif
		% if object.marital:
			Situation matrimoniale : ${object.marital}<br/>
		% endif
	</p>.          
</div>   ]]>
			</field>
		</record>

		<record id="custom_template_rappel_collab_1"
			model="mail.template">
			<field name="name">PSI Template email employee - Rappel Email au
				collaborateur</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Premier rappel de ${object.name_related or 'n/a' }</field>
			<field name="email_to">${object.work_email}</field>
			<field name="email_cc">${object.coach_id.email}</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour ${object.name}, 
     	Ceci est un premier rappel pour suivre le cours d'éthique.                    
	</p>               
</div>   ]]>
			</field>
		</record>

		<!-- Second rappel au collaborateur -->
		<record id="custom_template_rappel_collab_2"
			model="mail.template">
			<field name="name">PSI Second rappel au collaborateur</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.user_id.email}</field>
			<field name="subject">Second rappel de ${object.name}</field>
			<field name="email_to">${object.work_email}</field>
			<field name="email_cc">${object.coach_id.email}</field> <!-- cc RH -->
			<field name="body_html"><![CDATA[                
<div>           
	<p>Bonjour ${object.name},</p>
			<p>Ceci est un second rappel pour suivre le cours d'éthique.</p>
</div>
                  ]]>
			</field>
		</record>
		
		<!-- Template mail - ajouter declaration interet -->
		<record id="custom_template_add_declaration_interest"
			model="mail.template">
			<field name="name">PSI Template email employee - Remplir formulaire du déclaration d'intéret</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Rappel de ${object.name_related or 'n/a' } pour le rempissage du formulaire de déclaration d'intérêt</field>
			<field name="email_to">${object.work_email}</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour ${object.name}, 
     	Vous êtes invité à remplir le formulaire de déclaration d'intérêt.                    
	</p>               
</div>   ]]>
			</field>
		</record>
		
		<!-- Template mail - ajouter certificat de cours d'ethique -->
		<record id="custom_template_add_certificate_ethics"
			model="mail.template">
			<field name="name">PSI Template email employee - Remplir formulaire du certificat de cours d’éthique</field>
			<field name="model_id" ref="hr_employee_psi.model_hr_employee" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Rappel de ${object.name_related or 'n/a' } pour le rempissage du formulaire de certificat de cours d’éthique</field>
			<field name="email_to">${object.work_email}</field>
			<field name="body_html"><![CDATA[
<div>
    <p>
      	Bonjour ${object.name}, 
     	Vous êtes invité à remplir le formulaire de certificat de cours d’éthique.                    
	</p>               
</div>   ]]>
			</field>
		</record>
		
    </data>
</odoo>