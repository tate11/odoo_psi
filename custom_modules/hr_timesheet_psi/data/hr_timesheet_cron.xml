<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Cron send rappel timesheet email collaborator -->
        <record id="ir_cron_send_email_rappel_timesheet_collab" model="ir.cron">
            <field name="name">PSI Timesheet - Rappel du timesheet au collaborateur</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>	
            <field name="numbercall">-1</field>
			<field name="doall" eval="True" />
            <field eval="'account.analytic.line'" name="model" />
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:00:00')" />
            <field name="function" eval="'_send_email_rappel_timesheet_collaborator'" /> 
        </record>
        
        <!-- Cron send rappel envoie abscences email Ã  tous les membres -->
        <record id="ir_cron_send_email_rappel_envoie_abscence_membres" model="ir.cron">
            <field name="name">PSI Timesheet - Rappel d'envoie des abscences aux membres</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>	
            <field name="numbercall">-1</field>
			<field name="doall" eval="True" />
            <field eval="'account.analytic.line'" name="model" />
            <field name="function" eval="'_send_email_rappel_envoie_abscence_membres'" /> 
        </record>
        
        <!-- Cron send mail fin mois si timesheet non complet -->
        <record id="ir_cron_send_email_collab_timesheet_incomplet" model="ir.cron">
            <field name="name">PSI Timesheet - Rappel aux collaborateurs le fin du mois - Timesheet non complet</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>	
            <field name="numbercall">-1</field>
			<field name="doall" eval="True" />
            <field eval="'account.analytic.line'" name="model" />
            <field name="function" eval="'_send_email_collab_timesheet_incomplet'" /> 
        </record>
    </data>
</odoo>