<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data>
		<!-- Template email - avancement échelon -->
		<record id="template_avancement_echelon_id" model="mail.template">
			<field name="name">PSI Template email - Notification avancement échelon</field>
			<field name="model_id" ref="hr_contract_psi.model_hr_contract" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Avancement d'échelon.</field>
			<field name="email_to">${object.employee_id.work_email}</field>

			<field name="body_html"><![CDATA[
		<div>
		    <p>
		      	Bonjour ${object.employee_id.name},
		    </p>
		    <p></p>
		    <p>
		     	Vous avez changé d'échelon. Vous êtes passé à l'${object.psi_echelon}.                
			</p>
			<p></p>
			<p>
				Cordialement.
			</p>
		</div>   ]]>
			</field>
		</record>
		
				<!-- Template email - changement de statut de CDD à CDI -->
		<record id="template_changement_statut_id" model="mail.template">
			<field name="name">PSI Template email - Notification Changement de statut de CDD à CDI</field>
