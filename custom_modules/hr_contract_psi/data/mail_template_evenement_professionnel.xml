			<field name="model_id" ref="hr_contract_psi.model_hr_contract" />
			<field name="email_from">${object.create_uid.email}</field>
			<field name="subject">Affectation</field>
			<field name="email_to">${object.employee_id.work_email}</field>

			<field name="body_html"><![CDATA[
		<div>
		    <p>
		      	Bonjour ${object.employee_id.name}, <br />
		     	Vous êtes affecté à ${object.place_of_work}.              
			</p>
			<h5> Email - Notification de l'Affectation</h5>
		                 
		</div>   ]]>
			</field>
		</record>
		
		<!-- Template email - Changement de departement -->
