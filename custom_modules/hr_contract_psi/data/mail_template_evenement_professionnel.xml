			<field name="email_to">${object.employee_id.work_email}</field>

			<field name="body_html"><![CDATA[
			<div>
		    <p>
		      	Bonjour ${object.employee_id.name},
		    </p>
		    <p></p>
		    <p>
		     	Une modification a été apportée à votre contrat. Vous êtes desormais en ${object.psi_contract_type.upper()}.                
			</p>
			<p></p>
			<p>
				Cordialement.
			</p>
		</div>  
		   ]]>
			</field>
		</record>
		
